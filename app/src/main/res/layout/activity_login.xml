<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/nen"
            android:scaleType="centerCrop"
            android:id="@+id/igMain"
            ></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        android:id="@+id/layout1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Email"
            android:id="@+id/edEmailL"
            android:textSize="18dp"
            android:textColor="#000"
            android:padding="15dp"
            android:background="@drawable/edittext_draw"
            />
        <EditText
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:id="@+id/edPassL"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@drawable/edittext_draw"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/layout1"
        android:id="@+id/layout2"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="No account?"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:id="@+id/tvNo"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Register"
            android:textSize="20dp"
            android:id="@+id/tvRegister"
            android:gravity="center_vertical"
            android:textColor="#E53935"
            android:layout_toRightOf="@id/tvNo"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Login"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textSize="15dp"
            android:id="@+id/btnLogin"
            android:background="@drawable/edittext_draw"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/layout2"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:background="@drawable/line_draw"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Login with"
            android:textColor="#fff"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/tvWith"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/google"
            android:layout_below="@id/tvWith"
            android:layout_marginLeft="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="25dp"
            android:id="@+id/btnGoogle"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fb"
            android:layout_below="@id/tvWith"
            android:layout_marginRight="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:id="@+id/btnFB"
            />
    </RelativeLayout>

</RelativeLayout>